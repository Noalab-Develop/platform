{
  "compilerOptions": {
    /* ===============================
       Base
    ================================ */
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,

    /* ===============================
       Module / Resolution
    ================================ */
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,

    /* ===============================
       Paths / Aliases (CORRETO)
    ================================ */
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@/app/*": ["app/*"],
      "@/components/*": ["components/*"],
      "@/hooks/*": ["hooks/*"]
    },

    /* ===============================
       Next.js Plugin
    ================================ */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  /* ===============================
     Includes
  ================================ */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],

  /* ===============================
     Excludes
  ================================ */
  "exclude": ["node_modules"]
}